  (expand-file-name (buffer-name)))


(defun >>=config/on-load-python-mode ()
  "This function will be executed when `python-mode' is first loaded."
  (message
    ">>= loading python mode '%s'"
    (expand-file-name (buffer-name))))


(defun >>=config/on-visit-python-mode-file ()
  "This function will be executed any time a `python-mode' file is visited."
  (message
    ">>= visiting python mode file '%s'"
    (expand-file-name (buffer-name))))


